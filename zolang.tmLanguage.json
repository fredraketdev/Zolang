{
  "name": "Zolang",
  "scopeName": "source.zolang",
  "fileTypes": ["zolang", "zl"],
  "patterns": [
    {
      "name": "comment.line.double-slash.zolang",
      "match": "//.*$"
    },
    {
      "name": "string.quoted.double.zolang",
      "match": "\"([^\"\\\\]|\\\\.)*\""
    },
    {
      "name": "constant.numeric.zolang",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "keyword.control.zolang",
      "match": "\\b(als|dan|anders|zolang)\\b"
    },
    {
      "name": "keyword.other.zolang",
      "match": "\\b(verander|naar|toon|vraag|getal|tekst)\\b"
    },
    {
      "name": "keyword.operator.zolang",
      "match": "\\b(plus|min|maal|gedeeld|groter|kleiner|gelijk|niet_gelijk)\\b"
    },
    {
      "name": "variable.other.zolang",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  ]
}
